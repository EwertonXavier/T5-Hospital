@model T5_Hospital.Models.StaffDto
@{
    ViewBag.Title = "Remove";
}

<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <h2>Are you sure you want to delete this Staff?</h2>
        <div class="list-group">
            <div class="list-group-item text-center">
                <h3 class="list-group-item-heading text-center">Name:@Model.Name </h3>
                <p class="list-group-item-text">Id:@Model.Id</p>
                <p class="list-group-item-text">Department:@Model.DepartmentName</p>
            </div>
        </div>
        <div class="text-center">
            <form action="/Staff/Delete/@Model.Id" method="POST">
                <button class="btn btn-danger" type="submit">Confirm Delete</button>
                <a class="btn btn-default" href="/Staff/List" role="button">Cancel</a>
            </form>
        </div>
    </div>
</div>