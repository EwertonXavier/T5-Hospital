@model IEnumerable<T5_Hospital.Models.DepartmentDto>
@{
    ViewBag.Title = "New";
}

<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <div class="list-group">
            <div class="list-group-item">
            <h2 class="text-center">Add Staff</h2>
            <form class="form-horizontal" method="post" action="/Staff/Create">
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="departmentId">Department:</label>
                    <select name="DepartmentId" id="departmentId">
                        @foreach (var department in Model)
                        {
                            <option value=@department.DepartmentId> @department.DepartmentName</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <div>
                        <label class="col-sm-4 control-label" for="Name">Staff Name</label>
                        <input id="Name" name="Name" />
                    </div>
                </div>
                <div class="form-group">
                    <div>
                        <label class="col-sm-4 control-label" for="Email">Staff Email</label>
                        <input id="Email" name="Email" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-4 col-sm-8">
                        <input class="btn btn-default" type="submit" value="Submit" />
                        <a href="/Staff/List/" class="btn btn-primary">Cancel</a>
                    </div>

                </div>
            </form>

        </div>
        </div>
    </div>
</div>