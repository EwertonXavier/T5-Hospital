@model T5_Hospital.Models.AppointmentDto
@{
    ViewBag.Title = "Details";
}


<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="list-group">
            <div class="list-group-item">
                <h2 class="list-group-item-heading text-center">Appointment Details</h2>
                <div class="list-group-item-text">
                    <div class="row">
                        <div class="col-sm-4">Patient Name</div>
                        <div class="col-sm-8"><a href="/Patient/Details/@Model.PatientId">@Model.PatientFirstName @Model.PatientLastName</a></div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">Staff Name</div>
                        <div class="col-sm-8"><a href="/Staff/Details/@Model.StaffId">@Model.StaffName</a></div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">Date</div>
                        <div class="col-sm-8">@Model.AppointmentDate</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="text-center">
    <a class="btn btn-info" href="/Appointment/Edit/@Model.Id" role="button">Update</a>
    <a class="btn btn-danger" href="/Appointment/Remove/@Model.Id" role="button">Delete</a>
</div>

<div class="col-md-12 text-center">
    <a class="primary-light" href="/Appointment/List">Back to list</a>
</div>


