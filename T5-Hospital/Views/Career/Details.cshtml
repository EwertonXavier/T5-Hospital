@model T5_Hospital.Models.CareerDto
@{
    ViewBag.Title = "Details";
}

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="list-group">
            <div class="list-group-item">
                <h2 class="list-group-item-heading text-center">Career Details</h2>
                <div class="list-group-item-text">
                    <div class="row">
                        <div class="col-sm-4">Job Title</div>
                        <div class="col-sm-8">@Model.JobTitle</div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">Job Description</div>
                        <div class="col-sm-8">@Model.JobDescription</div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">Experience Required (In Years)</div>
                        <div class="col-sm-8">@Model.Experience_In_Years</div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">Department</div>
                        <div class="col-sm-8">@Model.DepartmentName</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="text-center">
    <a class="btn btn-info" href="/Career/Edit/@Model.JobId">Edit</a>
    <a class="btn btn-danger" href="/Career/Remove/@Model.JobId">Remove</a>
</div>
<div class="col-md-12 text-center">
    <a href="/Career/List">Back to list</a>
</div>


