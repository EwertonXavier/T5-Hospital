@model IEnumerable<T5_Hospital.Models.CareerDto>
@{
    ViewBag.Title = "List";
}

<h2>Careers List</h2>
<div>
    <a class="btn btn-primary" href="/Career/New">Add Career</a>
    <a class="btn btn-success" href="/Department/List">View Departments</a>
</div>
<div class="text-center my-2">
    <form action="/Career/List" method="get">
        <input type="text" placeholder="Search Career..." name="CareerSearch" />
        <input type="submit" value="Search" class="btn btn-primary" />
    </form>
</div>

<table class="table table-hover text-center">
    <thead>
        <tr>
            <th class="text-center">Job Title</th>
            <th class="text-center">Job Description</th>
            <th class="text-center">Experience Required (In Years)</th>
            <th class="text-center">Department</th>
            <th class="text-center" colspan="2">Controls</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var career in Model)
        {
        <tr>
            <td>@career.JobTitle</td>
            <td>@career.JobDescription</td>
            <td>@career.Experience_In_Years</td>
            <td>
                <a href="/Department/Details/@career.DepartmentId">@career.DepartmentName</a>
            </td>
            <td>
                <a href="/Career/Details/@career.JobId">Details</a>
            </td>
            <td>
                <a href="/Career/Remove/@career.JobId">Remove</a>
            </td>
        </tr>
        }
    </tbody>
</table>

