@model IEnumerable<T5_Hospital.Models.NewsDto>
    @{
        ViewBag.Title = "List";
    }

    <h2>List</h2>
    <div>
        <a class="btn btn-primary" href="/News/New">Add News</a>
        <a href="/Department/List" class="btn btn-info">View Departments</a>
    </div>
    <div class="text-center my-2">
        <form action="/News/List" method="get">
            <input type="text" placeholder="Search News by title..." name="NewsSearch" />
            <input type="submit" value="Search" class="btn btn-primary" />
        </form>
    </div>
    <table class="table table-hover text-center">
        <thead>
            <tr>
                <th class="text-center">News Title</th>
                <th class="text-center">Content</th>
                <th class="text-center">Date</th>
                <th colspan="2">Controls</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var news in Model)
            {
                <tr>
                    <td>@news.NewsTitle</td>
                    <td>@news.NewsContent</td>
                    <td>@news.NewsDate.ToUniversalTime().ToString("u").Split(' ')[0]</td>
                    <td>
                        <a href="/News/Details/@news.NewsId">Details</a>
                    </td>
                    <td>
                        <a href="/News/Remove/@news.NewsId">Remove</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
