
@{
    ViewBag.Title = "New";
}

<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <div class="list-group">
            <div class="list-group-item">
                <h2 class="list-group-item-heading text-center">Add Donor</h2>
                <form class="form-horizontal" action="/Donor/Create" method="POST">
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="donorFirstName">First Name</label>
                        <div class="col-sm-8">
                            <input class="form-control" type="text" id="donorFirstName" name="donorFirstName" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="donorLastName">Last Name</label>
                        <div class="col-sm-8">
                            <input class="form-control" type="text" id="donorLastName" name="donorLastName" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="donorEmail">Email</label>
                        <div class="col-sm-8">
                            <input class="form-control" type="email" id="donorEmail" name="donorEmail" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="donorPhone">Phone number</label>
                        <div class="col-sm-8">
                            <input class="form-control" type="tel" id="donorPhone" name="donorPhone" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-4 col-sm-8">
                            <button class="btn btn-primary" type="submit">Submit</button>
                            <a href="/Donor/List" class="btn btn-danger">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
