 @model T5_Hospital.Models.DonorDto

@{
    ViewBag.Title = "Edit";
}

<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <div class="list-group">
            <div class="list-group-item">
                <h2 class="list-group-item-heading text-center">Edit Donor</h2>
                <form class="form-horizontal" action="/Donor/Edit/@Model.DonorId" method="POST">
                    <div style="display:none;">
                        @* Pass through the Donor ID *@
                        <input type="text" name="donorId" value="@Model.DonorId">
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="donorFirstName">First Name</label>
                        <div class="col-sm-8">
                            <input class="form-control" type="text" id="donorFirstName" name="donorFirstName" value="@Model.DonorFirstName">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="donorLastName">Last Name</label>
                        <div class="col-sm-8">
                            <input class="form-control" type="text" id="donorLastName" name="donorLastName" value="@Model.DonorLastName">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="donorEmail">Email</label>
                        <div class="col-sm-8">
                            <input class="form-control" type="email" id="donorEmail" name="donorEmail" value="@Model.DonorEmail">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="donorPhone">Phone</label>
                        <div class="col-sm-8">
                            <input class="form-control" type="tel" id="donorPhone" name="donorPhone" value="@Model.DonorPhone">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-4 col-sm-8">
                            <button class="btn btn-primary" type="submit">Update Donor</button>
                            <a href="/Donor/Details/@Model.DonorId" class="btn btn-danger">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
