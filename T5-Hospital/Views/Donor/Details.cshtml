@model T5_Hospital.Models.ViewModels.DetailsDonor
@{
    ViewBag.Title = "Details";
}

    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="list-group">
                <div class="list-group-item">
                    <h2 class="list-group-item-heading text-center">Donor Details</h2>
                    <div class="list-group-item-text">
                        <div class="row">
                            <div class="col-sm-4">First Name</div>
                            <div class="col-sm-8">@Model.SelectedDonor.DonorFirstName</div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4">Last Name</div>
                            <div class="col-sm-8">@Model.SelectedDonor.DonorLastName</div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4">Email address</div>
                            <div class="col-sm-8">@Model.SelectedDonor.DonorEmail</div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4">Phone number</div>
                            <div class="col-sm-8">@Model.SelectedDonor.DonorPhone</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="list-group">
                <div class="list-group-item">
                    <h2 class="list-group-item-heading text-center">Donations Related to this Donor</h2>
                    <div class="list-group-item-text">
                        <div class="row">
                            <div class="col-sm-12 my-2">
                                @foreach (var donation in Model.RelatedDonations)
                                {
                                    <a href="/Donation/Details/@donation.DonationId">Amount: $@donation.DonationAmount --- Date: @donation.DonationDate.ToString("yyyy-MM-dd")</a><br />
                                }
                            </div>
                            <div class="col-sm-3 my-2">
                                <a href="/Donation/New" class="btn btn-primary">Add Donation</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="text-center">
        <a class="btn btn-info" href="/Donor/Edit/@Model.SelectedDonor.DonorId" role="button">Edit</a>
        <a class="btn btn-danger" href="/Donor/Remove/@Model.SelectedDonor.DonorId" role="button">Remove</a>
    </div>

    <div class="col-md-12 text-center">
        <a class="primary-light" href="/Donor/List">Back to list</a>
    </div>

