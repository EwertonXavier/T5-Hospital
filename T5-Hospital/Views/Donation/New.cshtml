
@{
    ViewBag.Title = "New";
}


<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <h2 class="text-center">New Donation</h2>
        <form class="form-horizontal" action="/Donation/Create" method="POST">
            <div class="form-group">
                <label class="col-sm-4 control-label" for="donorId">Donor Id (id / will change to dropdown menu)</label>
                <div class="col-sm-8">
                    <input class="form-control" id="donorId" name="donorId" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label" for="donationAmount">Donation Amount</label>
                <div class="col-sm-8">
                    <input class="form-control" type="number" id="donationAmount" name="donationAmount">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label" for="donationDate">Donation Date</label>
                <div class="col-sm-8">
                    <input class="form-control" type="date" id="donationDate" name="donationDate" value="@System.DateTime.Now.ToString("yyyy-MM-dd")">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label" for="donationDescription">Donation Description</label>
                <div class="col-sm-8">
                    <textarea class="form-control" type="text" id="donationDescription" name="donationDescription" rows="5"></textarea>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-8">
                    <button class="btn btn-default" type="submit">Add Donation</button>
                </div>
            </div>
        </form>
    </div>
</div>

