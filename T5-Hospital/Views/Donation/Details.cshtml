@model T5_Hospital.Models.DonationDto

@{
    ViewBag.Title = "Details";
}


<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="list-group">
            <div class="list-group-item">
                <h2 class="list-group-item-heading text-center">Donation Details</h2>
                <div class="list-group-item-text">
                    <div class="row">
                        <div class="col-sm-4">Donor Name</div>
                        <div class="col-sm-8"><a href="/Donor/Details/@Model.DonorId">@Model.DonorFirstName @Model.DonorLastName</a></div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">Donation Amount</div>
                        <div class="col-sm-8">@Model.DonationAmount</div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">Donation Date</div>
                        <div class="col-sm-8">@Model.DonationDate.ToString("yyyy-MM-dd")</div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">Donation Description</div>
                        <div class="col-sm-8">@Model.DonationDescription</div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">Department Name</div>
                        <div class="col-sm-8">@Model.DepartmentName</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="text-center">
    <a class="btn btn-info" href="/Donation/Edit/@Model.DonationId" role="button">Edit</a>
    <a class="btn btn-danger" href="/Donation/Remove/@Model.DonationId" role="button">Remove</a>
</div>

<div class="col-md-12 text-center">
    <a class="primary-light" href="/Donation/List">Back to list</a>
</div>


