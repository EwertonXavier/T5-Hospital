@model T5_Hospital.Models.ViewModels.UpdateDonation

@{
    ViewBag.Title = "Edit";
}

<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <h2 class="text-center">Update Donation</h2>
        <form class="form-horizontal" action="/Donation/Edit/@Model.SelectedDonation.DonationId" method="POST">
            <div style="display:none;">
                @* Pass through the Donation ID *@
                <input type="text" name="donationId" value="@Model.SelectedDonation.DonationId">
            </div>
            <div style="display:none;">
                @* Pass through the Donor ID *@
                <input type="text" name="donorId" value="@Model.SelectedDonation.DonorId">
            </div>

            <div class="form-group">
                <label class="col-sm-4 control-label" for="DonationDescription">Donor</label>
                <div class="col-sm-8">

                    <select class="form-control" name="DonorID">

                        @foreach (var donor in Model.DonorOptions)
                        {
                            <option class="form-control" value="@donor.DonorId">@donor.DonorFirstName @donor.DonorLastName</option>
                        }
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label" for="donationAmount">Donation Amount</label>
                <div class="col-sm-8">
                    <input class="form-control" type="number" id="donationAmount" name="donationAmount" value="@Model.SelectedDonation.DonationAmount">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label" for="donationDate">Donation Date</label>
                <div class="col-sm-8">
                    <input class="form-control" type="date" id="donationDate" name="donationDate" value="@Model.SelectedDonation.DonationDate.ToString("yyyy-MM-dd")">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label" for="donationDescription">Donation Description</label>
                <div class="col-sm-8">
                    <textarea class="form-control" type="text" id="donationDescription" name="donationDescription" value="@Model.SelectedDonation.DonationDescription" rows="5">@Model.SelectedDonation.DonationDescription</textarea>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-8">
                    <button class="btn btn-default" type="submit">Update Donation</button>
                </div>
            </div>
        </form>
    </div>
</div>