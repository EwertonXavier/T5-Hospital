@model T5_Hospital.Models.ViewModels.UpdateDonation

@{
    ViewBag.Title = "Edit";
}

<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <div class="list-group">
            <div class="list-group-item">
                <h2 class="list-group-item-heading text-center">Edit Donation</h2>
                <form class="form-horizontal" action="/Donation/Edit/@Model.SelectedDonation.DonationId" method="POST">
                    <div style="display:none;">
                        @* Pass through the Donation ID *@
                        <input type="text" name="DonationId" value="@Model.SelectedDonation.DonationId">
                    </div>
                    <!--<div style="display:none;">-->
                    @* Pass through the Donor ID *@
                    <!--<input type="text" name="DonorId" value="@Model.SelectedDonation.DonorId">
                </div>-->
                    <!--<div style="display:none;">-->
                    @* Pass through the Department ID *@
                    <!--<input type="text" name="DepartmentId" value="@Model.SelectedDonation.DepartmentId">
                </div>-->

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="DonorId">Donor</label>
                        <div class="col-sm-8">

                            <select class="form-control" name="DonorId">

                                @foreach (var donor in Model.DonorOptions)
                                {
                                    if (donor.DonorId == Model.SelectedDonation.DonorId)
                                    {
                                        <option class="form-control" value="@donor.DonorId" selected>@donor.DonorFirstName @donor.DonorLastName</option>

                                    }
                                    else
                                    {
                                        <option class="form-control" value="@donor.DonorId">@donor.DonorFirstName @donor.DonorLastName</option>

                                    }
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="DepartmentId">Department</label>
                        <div class="col-sm-8">

                            <select class="form-control" name="DepartmentId">

                                @foreach (var department in Model.DepartmentOptions)
                                {
                                    if (department.DepartmentId == Model.SelectedDonation.DepartmentId)
                                    {
                                        <option class="form-control" value="@department.DepartmentId" selected>@department.DepartmentName</option>
                                    }
                                    else
                                    {
                                        <option class="form-control" value="@department.DepartmentId">@department.DepartmentName</option>

                                    }
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="donationAmount">Donation Amount</label>
                        <div class="col-sm-8">
                            <input class="form-control" type="number" id="donationAmount" name="DonationAmount" value="@Model.SelectedDonation.DonationAmount">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="donationDate">Donation Date</label>
                        <div class="col-sm-8">
                            <input class="form-control" type="date" id="donationDate" name="DonationDate" value="@Model.SelectedDonation.DonationDate.ToString("yyyy-MM-dd")">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="donationDescription">Donation Description</label>
                        <div class="col-sm-8">
                            <textarea class="form-control" type="text" id="donationDescription" name="DonationDescription" value="@Model.SelectedDonation.DonationDescription" rows="5">@Model.SelectedDonation.DonationDescription</textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-4 col-sm-8">
                            <button class="btn btn-primary" type="submit">Update</button>
                            <a href="/Donation/Details/@Model.SelectedDonation.DonationId" class="btn btn-danger">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
