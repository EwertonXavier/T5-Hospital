@model T5_Hospital.Models.DonationDto

@{
    ViewBag.Title = "Remove";
}


<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <h2>Are you sure you want to delete this Donation?</h2>
        <div class="list-group">
            <div class="list-group-item text-center">
                <h3 class="list-group-item-heading text-center">First Name:@Model.DonorFirstName</h3>
                <h3 class="list-group-item-heading text-center">Last Name:@Model.DonorLastName</h3>
                <p class="list-group-item-text">Donation Amount:@Model.DonationAmount</p>
            </div>
        </div>
        <div class="text-center">
            <form action="/Donation/Delete/@Model.DonationId" method="POST">
                <button class="btn btn-danger" type="submit">Confirm Delete</button>
                <a class="btn btn-default" href="/Donation/List" role="button">Cancel</a>
            </form>
        </div>
    </div>
</div>
