@model IEnumerable<T5_Hospital.Models.DepartmentDto>
@{
    ViewBag.Title = "List";
}

<h2>Departments List</h2>
<div>
    <a class="btn btn-primary" href="/Department/New">Add Department</a>
</div>
<div class="text-center my-2">
    <form action="/Department/List" method="get">
        <input type="text" placeholder="Search Department..." name="DepartmentSearch" />
        <input type="submit" value="Search" class="btn btn-primary" />
    </form>
</div>

<table class="table table-hover text-center thead-dark">
    <thead>
        <tr>
            <th class="text-center">Department Name</th>
            <th class="text-center">Department Description</th>
            <th class="text-center" colspan="2">Controls</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var department in Model)
        {
        <tr>
            <td>@department.DepartmentName</td>
            <td>@department.DepartmentDescription</td>
            <td>
                <a href="/Department/Details/@department.DepartmentId">Details</a>
            </td>
            <td>
                <a href="/Department/Remove/@department.DepartmentId">Remove</a>
            </td>
        </tr>
        }
    </tbody>
</table>




