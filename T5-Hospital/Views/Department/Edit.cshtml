@model T5_Hospital.Models.DepartmentDto
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
<form method="post" action="/Department/Edit/@Model.DepartmentId">
    <input type="hidden" name="DepartmentId" value="@Model.DepartmentId"/>
    <div>
        <label for="departmentName">Department Name</label>
        <input id="departmentName" name="Name" value="@Model.DepartmentName" />
    </div>
    <div>
        <label for="departmentDescription">Department Description</label>
        <input id="departmentDescription" name="Description" value="@Model.DepartmentDescription" />
    </div>
    <div>
        <input class="btn btn-default" type="submit" value="Update" />
    </div>
</form>

