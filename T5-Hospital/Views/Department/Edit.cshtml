@model T5_Hospital.Models.DepartmentDto
@{
    ViewBag.Title = "Edit";
}

<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <div class="list-group">
            <div class="list-group-item">
                <h2 class="list-group-item-heading text-center">Edit Department</h2>
                <form class="form-horizontal" action="/Department/Edit/@Model.DepartmentId" method="POST">
                    <div style="display:none;">
                        <input type="text" name="DepartmentId" value="@Model.DepartmentId">
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="departmentName">Department Name</label>
                        <div class="col-sm-8">
                            <input class="form-control" type="text" id="departmentName" name="Name" value="@Model.DepartmentName">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="departmentDescription">Department Description</label>
                        <div class="col-sm-8">
                            <input class="form-control" type="text" id="departmentDescription" name="Description" value="@Model.DepartmentDescription">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-4 col-sm-8">
                            <button class="btn btn-primary" type="submit">Update Ddepartment</button>
                            <a href="/Department/Details/@Model.DepartmentId" class="btn btn-danger">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

