
@{
    ViewBag.Title = "New";
}

<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <div class="list-group">
            <div class="list-group-item">
                <h2 class="list-group-item-heading text-center">Add Department</h2>
                <form class="form-horizontal" action="/Department/Create" method="POST">
                    <div class="form-group">
                        <label class="col-sm-6 control-label" for="departmentName">Department Name</label>
                        <div class="col-sm-6">
                            <input class="form-control" type="text" id="departmentName" name="Name" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-6 control-label" for="departmentDescription">Department Description</label>
                        <div class="col-sm-6">
                            <input class="form-control" type="text" id="departmentDescription" name="Description" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-4 col-sm-8">
                            <button class="btn btn-primary" type="submit">Submit</button>
                            <a href="/Department/List" class="btn btn-danger">Cancel</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

