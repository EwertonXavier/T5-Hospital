
@{
    ViewBag.Title = "New Visitor";
}

<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <div class="list-group">
            <div class="list-group-item">
                <h2 class="list-group-item-heading text-center">Add Visitor</h2>
                <form class="form-horizontal" method="post" action="/Visitor/Create">
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="visitorFName">First Name</label>
                        <div class="col-sm-8">
                            <input id="visitorFName" class="form-control" type="text" name="FirstName" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="visitorLName">Last Name</label>
                        <div class="col-sm-8">
                            <input id="visitorLName" class="form-control" type="text" name="LastName" />
                        </div>
                    </div>
                    <div class="form-group text-center">
                        <input class="btn btn-primary" type="submit" value="Submit" />
                        <a href="/Visitor/List" class="btn btn-danger">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>