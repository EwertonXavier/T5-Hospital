@model T5_Hospital.Models.VisitorDto
@{
    ViewBag.Title = "Edit Visitor";
}

<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <div class="list-group">
            <div class="list-group-item">
                <h2 class="list-group-item-heading text-center">Edit Visitor</h2>
                <form class="form-horizontal" method="post" action="/Visitor/Edit/@Model.VisitorId">
                    <input type="hidden" name="VisitorId" value="@Model.VisitorId" />
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="patientFName">First Name</label>
                        <div class="col-sm-8">
                            <input id="patientFName" class="form-control" type="text" name="FirstName" value="@Model.FirstName" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="patientLName">Last Name</label>
                        <div class="col-sm-8">
                            <input id="patientLName" class="form-control" type="text" name="LastName" value="@Model.LastName" />
                        </div>
                    </div>
                    <div class="form-group text-center">
                        <input class="btn btn-primary" type="submit" value="Update" />
                        <a href="/Visitor/Details/@Model.VisitorId" class="btn btn-danger">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>