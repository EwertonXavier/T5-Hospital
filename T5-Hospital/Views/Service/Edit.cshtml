@model T5_Hospital.Models.ViewModels.UpdateService
@{
    ViewBag.Title = "Edit";
}

<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        <div class="list-group">
            <div class="list-group-item">
                <h2 class="list-group-item-heading text-center">Edit Service</h2>
                <form class="form-horizontal" method="post" action="/Service/Edit/@Model.SelectedService.ServiceId">
                    <input type="hidden" name="ServiceId" value="@Model.SelectedService.ServiceId" />
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="serviceName">Service Name</label>
                        <div class="col-sm-8">
                            <input class="form-control" id="serviceName" name="ServiceName" value="@Model.SelectedService.ServiceName" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="serviceDetail">Service Detail</label>
                        <div class="col-sm-8">
                            <input class="form-control" id="serviceDetail" name="ServiceDetail" value="@Model.SelectedService.ServiceDetail" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="DepartmentId">Department</label>
                        <div class="col-sm-8">
                            <select class="form-control" name="DepartmentId" id="departmentId" value="@Model.SelectedService.DepartmentName">

                                @foreach (var department in Model.AvailableDepartments)
                                {
                                    if (Model.SelectedService.DepartmentId == department.DepartmentId)
                                    {
                                        <option class="form-control" selected value=@department.DepartmentId> @department.DepartmentName</option>
                                    }
                                    else
                                    {
                                        <option class="form-control" value=@department.DepartmentId> @department.DepartmentName</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group text-center">
                        <input class="btn btn-primary" type="submit" value="Update" />
                        <a href="/Service/Details/@Model.SelectedService.ServiceId" class="btn btn-danger">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

